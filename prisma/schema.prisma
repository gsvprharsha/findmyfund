generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VentureFirm {
  id         Int     @id @default(autoincrement())
  firm       String
  city       String
  state      String
  seed       Boolean @default(false)
  early      Boolean @default(false)
  late       Boolean @default(false)
  categories Json
  website    String?
  crunchbase String?
  linkedin   String?
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  imageUrl  String?
  source    String?
  createdAt DateTime @default(now())
}
